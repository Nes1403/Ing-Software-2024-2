import React, { useState } from 'react';
import './App.css'; // Archivo CSS principal

// Importa los componentes CRUDPeliculas y CRUDClientes
import CRUDPeliculas from './componentes/Peliculas/CRUDPeliculas';
import CRUDClientes from './componentes/Clientes/CRUDClientes';

function App() {
  // Define los estados o datos que necesitas manejar en tu aplicación
  const [clientes, setClientes] = useState([]);
  const [peliculas, setPeliculas] = useState([]);

  // Funciones para agregar clientes y películas
  const agregarCliente = (nuevoCliente) => {
    setClientes([...clientes, nuevoCliente]);
  };

  const agregarPelicula = (nuevaPelicula) => {
    setPeliculas([...peliculas, nuevaPelicula]);
  };

  return (
    <div className="App">
      <CRUDClientes clientes={clientes} onAgregarCliente={agregarCliente} />
      <CRUDPeliculas peliculas={peliculas} onAgregarPelicula={agregarPelicula} />
    </div>
  );
}

export default App;
